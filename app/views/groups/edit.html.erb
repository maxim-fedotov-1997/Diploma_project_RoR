<h1>Изменение группы</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :study_programm %>
    <%= f.text_field :study_programm, class: 'form-control' %>

    <%= f.submit "Изменить группу", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>